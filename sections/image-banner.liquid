<div class="breadcrumb" style="background-image: url('{{ section.settings.bg-img | img_url:'master' }}');background-size: cover;">
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            {% if section.settings.heading != blank %}
                    <h1>{{ section.settings.heading | img_url:'master' }}</h1>
            {% else %}
            <h1>{{ page.title }}</h1>
            {% endif %}
        </div>
    </div>
</div>
</div>
{% schema %}
  {
    "name": "BreadCrumb",
    "class": "index-section",
    "settings": [
    {
      "id": "bg-img",
      "type": "image_picker",
      "label": "Image"
    },
    {
      "id": "heading",
      "type": "text",
      "label": "Heading"
    }
]
  }
{% endschema %}
