<div class="service" style="background-image: url('{{ section.settings.background_image | img_url:'master' }}');">
    <div class="container-fluid-xl">
    <div class="title-white text-center">
       {% if section.settings.heading != blank %}
          <h2 class="text-center h2">{{ section.settings.heading }}</h2>
       {% endif %}
    </div>
    <div class="services-block">
       {% if section.blocks != blank %}
          <div class="row">
             {% for block in section.blocks %}
                <div class="col-lg-6">
                   {% if block.settings.logo-image != blank  %}
                      <div class="service-logo text-center"> 
                          <img src="{{ block.settings.logo-image | img_url:'master' }}" alt="{{ block.settings.heading }}">
                     </div>
                   {% endif %}
                   <div class="content">
                      {% if block.settings.heading != blank  %}
                         <h2 class="text-center text24">{{ block.settings.heading }}</h2>
                      {% endif %}
                      {% if block.settings.button_label != blank  %}
                        <div class="btn-custom text-center w-100"><a href="{{ block.settings.button_link }}" class="btn btn-transparent btn-rounded text-center"><span>{{ block.settings.button_label }}</span></a></div>
                      {% endif %}
                      {% if block.settings.text != blank  %}
                         <p class="text-center">{{ block.settings.text }}</p>
                      {% endif %}
                   </div>
                   
                </div>
             {% endfor %}
          </div>
       {% endif %}
    </div>
    </div>
 </div>
 {% schema %}
 {
    "name":"Services",
    "settings":[
       {
          "id":"background_image",
          "type":"image_picker",
          "label":"Background image"
       },
       {
          "type":"text",
          "id":"heading",
          "label":"Heading"
       }
    ],
    "blocks":[
       {
          "type":"image-section",
          "name":"service",
          "settings":[
             {
                "id":"logo-image",
                "type":"image_picker",
                "label":"Image"
             },
             {
                "id":"heading",
                "type":"text",
                "label":"Heading"
             },
             {
                "id":"button_label",
                "type":"text",
                "label":"Button label"
             },
             {
                "id":"button_link",
                "type":"url",
                "label":"Button link"
             },
             {
                "id":"text",
                "type":"html",
                "label":"Text"
             }
          ]
       }
       
    ],
    "presets":[
       {
          "name":"Services",
          "category":"Services"
       }
    ]
 }
 {% endschema %}
 