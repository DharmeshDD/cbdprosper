<div class="zigzag-wrapper pattern-add">
  {% capture image_layout %}
  <div class="col-lg-5">
    <div class="image">
      {% if section.settings.image != blank %}
      <img src="{{ section.settings.image | img_url:'master' }}" class="img-fluid" alt="{{ section.settings.heading }}">
      {% endif %}
    </div>
  </div>
  {% endcapture %}
  <div class="container-fluid-xl">
    <div class="row align-items-center">
      {% if section.settings.layout == 'left' %}
      {{ image_layout }}
      {% endif %}
      <div class="col-lg-7">
        <div class="title-black text-center">
          {% if section.settings.heading != blank %}
          <h2 class="h2">{{ section.settings.heading }}</h2>
          {% endif %}
        </div>
        <div class="content text-center">
          {% if section.settings.text != blank %}
          <p>{{ section.settings.text }}</p>
          {% endif %}
        </div>
      </div>
      {% if section.settings.layout == 'right' %}
      {{ image_layout }}
      {% endif %}
    </div>
  </div>
</div>


{% schema %}
{
"name": "Image with text",
"settings": [
{
"id": "image",
"type": "image_picker",
"label": "Image"
},
{
"type": "select",
"id": "layout",
"label":"Image alignment",
"default": "right",
"options": [
{
"value": "left",
"label":"Left"
},
{
"value": "right",
"label": "Right"
}
]
},
{
"id": "heading",
"type": "text",
"label": "Heading"
},
{
"id": "text",
"type": "html",
"label": "Text"
}
],
"presets":[
{
"name":"Zigzag Content",
"category":"Image with text"
}
]
}
{% endschema %}